---
import Job from "./Job.astro";
import Skills from "./Skills.astro";

export interface Props {
	print?: boolean;
}

const { print } = Astro.props as Props;
---

<style>
	.heading {
		display: flex;
		flex-direction: row;
		flex-wrap: wrap;
		width: 100%;
	}

	.pic {
		flex: 30%;
	}
	.split {
		flex: 5%;
	}

	.pic > img {
		border-radius: 50px;
	}

	.aboutme {
		flex: 60%;
	}
</style>

<div class="heading">
	<div class="pic">
		<img
			src="https://media-exp1.licdn.com/dms/image/C5603AQFpgJY4WOG_Zw/profile-displayphoto-shrink_800_800/0/1517548012868?e=1666828800&v=beta&t=y9TdIQg5dnUC3b282y8neLQaLLfe_cBLIiYXg8y3ESM"
		/>
	</div>
	<div class="split"></div>
	<div class="aboutme">
		<h3>Łukasz Młynik</h3>
